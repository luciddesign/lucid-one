<div class="{% if settings.show_sidebar %}span9{% else %}span12{% endif %} columns" id="main-content">

    <!-- PAGE CONTENT -->
	<h1 class="title">{{ page.title }}</h1>
	<hr>
	{{ page.content }}
	
	<!-- CONTACT FORM -->
	{% form 'contact' %}
	
	<!-- CONTACT FORM CONFIRMATION -->
	{% if form.posted_successfully? %}
	<hr>
	<p class="alert alert-success">
		{{ 'contact.form.success' | t }}
	</p>
	{% endif %}
	
	<!-- CONTACT FORM ERROR -->
	{% if form.errors %}
	<hr>
	<p class="alert alert-error">
		<!-- {{ form.errors.size }} or {{ form.errors | size }} -->
      	{{ 'contact.error_count' | t: count: form.errors | size }}<br>
		{% for field in form.errors %}
      	{% assign field_name = field | capitalize | replace: 'Body', 'Message' %}
      	{% assign error_message = form.errors.messages[field] %}
      	{{ 'contact.error.message' | t: field_name: field_name, error_message: error_message }}
   		{% endfor %}
	</p>
	{% endif %}
	<hr>
	
	<!-- CONTACT FORM INPUTS -->
	<fieldset>
		<div class="control-group">
			<label class="control-label" for="contactFormName">{{ 'contact.form.name' | t }}</label>
			<div class="controls">
				<input type="text" id="contactFormName" class="input-xlarge" name="contact[name]">
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="contactFormEmail">{{ 'contact.form.email' | t }}</label>
			<div class="controls">
				<input type="email" id="contactFormEmail" class="input-xlarge" name="contact[email]">
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="contactFormTelephone">{{ 'contact.form.phone' | t }}</label>
			<div class="controls">
				<input type="tel" id="contactFormTelephone" class="input-xlarge" name="contact[phone]">
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="contactFormMessage">{{ 'contact.form.message' | t }}</label>
			<div class="controls">
				<textarea rows="3" class="input-xlarge" id="contactFormMessage" name="contact[body]"></textarea>
			</div>
		</div>
		<button class="btn btn-primary" id="contactFormSubmit" type="submit">{{ 'contact.form.send' | t }}</button>
	</fieldset>

	{% endform %}

</div>
